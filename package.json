{
  "name": "torr-app",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build-packages": "yarn build-components && yarn build-icons && yarn build-styles",
    "build-components": "yarn workspace @torr-app/components build",
    "build-icons": "yarn workspace @torr-app/icons build",
    "build-styles": "yarn workspace @torr-app/styles build",
    "bump-version": "yarn changeset add && yarn changeset version",
    "release": "yarn build-packages && yarn changeset publish",
    "lint": "eslint --fix --quiet",
    "lint:types": "tsc --noEmit",
    "lint:all": "yarn lint && yarn lint:types",
    "generate-icons": "cd packages/icons && yarn generate-themed-icons && yarn generate-custom-icons",
    "preview": "vite preview",
    "storybook": "storybook dev -p 5001",
    "build-storybook": "storybook build",
    "check_package_update": "yarn dlx npm-check -u"
  },
  "dependencies": {
    "@radix-ui/themes": "^3.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@chromatic-com/storybook": "^1.6.1",
    "@eslint/js": "^9.7.0",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-onboarding": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/manager-api": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@storybook/theming": "^8.2.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-storybook": "^0.8.0",
    "globals": "^15.8.0",
    "prettier": "^3.3.3",
    "storybook": "^8.2.9",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.17.0",
    "vite": "^5.3.5"
  },
  "overrides": {
    "eslint": "^9.7.0"
  },
  "packageManager": "yarn@4.3.1"
}
